// Ahora los pedidos tienen estado
public class Pedido {
    private String nombrePlato;
    private String tipo;
    private boolean completado; // Saber si está listo

    public Pedido(String nombrePlato, String tipo) {
        this.nombrePlato = nombrePlato;
        this.tipo = tipo;
        this.completado = false; // Por defecto no está hecho
    }

    public String getNombrePlato() {
        return nombrePlato;
    }

    public String getTipo() {
        return tipo;
    }

    public boolean isCompletado() {
        return completado; // Devolvemos si ya está listo
    }

    public void completar() {
        this.completado = true; // Marcamos como listo
    }
}
